<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme.Dialog" parent="android:Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/dialog_full_holo_light</item>
        <item name="android:maxWidth">600dp</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:colorPrimary">#1775ac</item>
        <item name="android:colorPrimaryDark">#104f75</item>
        <item name="android:colorAccent">#FFF</item>
        <item name="android:windowBackground">@color/window_background</item>
        <item name="android:navigationBarColor">#1775ac</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="SideDrawerSecondaryText">
        <item name="android:textSize">@dimen/side_drawer_secondary_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/play_fg_side_drawer_secondary</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/side_drawer_item_left_padding</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/side_drawer_item_secondary_min_height</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">8.0dip</item>
    </style>

    <style name="SideDrawerRegularText">
        <item name="android:textSize">21.0sp</item>
        <item name="android:textColor">@color/play_fg_primary</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:paddingLeft">@dimen/side_drawer_item_left_padding</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/side_drawer_item_primary_min_height</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="FeedbackMessageText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#ff333333</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="FeedbackTimeSince">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">#66000000</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="EmptyText">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textColor">#aaa</item>
    </style>

    <style name="Theme.Yyets.Transparent.NoActionBar" parent="@style/AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>